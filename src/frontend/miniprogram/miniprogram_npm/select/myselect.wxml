<!-- https://blog.csdn.net/weixin_45085423/article/details/106685531 -->
<view class='com-selectBox'>
    <view class='com-sContent' bindtap='selectToggle'>
        <view class='com-sTxt'>{{nowText}}</view>
        <image src='/static/icon-left-jt.png'  class='com-sImg'  animation="{{animationData}}"></image> 
    </view>
    <view class='com-sList' wx:if="{{selectShow}}">  
        <view wx:for="{{propArray}}" data-index="{{index}}" wx:key='index' class='com-sItem' bindtap='setText'>{{item.text}}</view>
    </view>
</view>

